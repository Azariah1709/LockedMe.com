import java.io.File;
import java.io.IOException;
import java.util.Arrays;
import java.util.Scanner;


public class MainDisplay {
	public static void main(String args[]) throws IOException{
		char a;
		boolean m= true;
	    
		
		Scanner inp = new Scanner(System.in);
		DisplayText obj1 = new DisplayText();
		System.out.println("----LockedMe.com----   Developed by: Azariah John K");
		
		
		
			System.out.println(" 1.Enter 1 to Retrieve files in order: \n 2.Enter 2 for business operations: \n 3.Enter 3 to exit the application:");
			a=inp.next().charAt(0);
			
			
			

			while(m==true){
				switch (a) {


			      case '1':
			    	  File dir = new File("F:\\file");

				      File[] files = dir.listFiles();

				      Arrays.sort(files, (f1, f2) -> f1.compareTo(f2));

				      for (File file : files) {
				         if (!file.isHidden()) {
				            if (file.isDirectory()) {
				               System.out.println("DIR \t" + file.getName());
				            } else {
				               System.out.println("FILE\t" + file.getName());
				            }
				         }
				      }
			          break;

			      
			      case '2':
			    	  obj1.display();
			           break;

			     
			      case '3':
			    	  m=false;
			    	  break;

			      
			      

			      default:
			        System.out.println("Invalid operator!");
			        break;
			    }
			}
			inp.close();
	}

}
