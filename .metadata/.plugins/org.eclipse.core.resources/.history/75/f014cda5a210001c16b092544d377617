import java.util.Scanner;
import java.io.File;
import java.io.IOException;

public class DisplayText extends FileMethods { 
	int operator;
    
	FileMethods obj = new FileMethods();
	public void display()throws IOException{
		Scanner in = new Scanner(System.in);
	    boolean k=true;
	    
		do{
			System.out.println(" 1.Enter 1 for file creation: \n 2.Enter 2 to delete a file: \n 3.Enter 3 to search a file: \n 4.Enter 4 to return to Application ");
			operator = in.nextInt();
			
			switch(operator){
			case '1' :
		    	  System.out.print("Enter the desired name of your file: ");
			        String fileName = in.nextLine();
			        fileName = fileName + ".txt";
			        String filelocation = "F:\\file\\" + fileName;

			        File file = new File(filelocation);
			        
			        if (file.createNewFile()) {
			            System.out.println("File created.");
			        } else {
			            System.out.println("File already exists.");
			        }
			        break;
		        
		      

		      
			case '2':
		    	  System.out.println("Enter the file name to be deleted:");
		  		String fileName1 = in.nextLine();
		          fileName1 = fileName1 + ".txt";
		          String filelocation1 = "F:\\file\\" + fileName1;
		          
		          File file1 = new File(filelocation1);
		          
		          if(file1.delete())
		          {
		              System.out.println("File deleted successfully");
		          }
		          else
		          {
		              System.out.println("Failed to delete the file");
		          }
		          break;
		        
		      
		          

			case '3':
		    	  System.out.println("Enter the file name to be found:");
		  		String fileName2 = in.nextLine();
		  		File directory = new File("F:\\file");
		  		  
		         
		          String[] flist = directory.list();
		          int flag = 0;
		          if (flist == null) {
		              System.out.println("Empty directory.");
		          }
		          else {
		    
		             
		              for (int i = 0; i < flist.length; i++) {
		                  String filename = flist[i];
		                  if (filename.equalsIgnoreCase(fileName2)) {
		                      System.out.println(filename + " found");
		                      flag = 1;
		                  }
		              }
		          }
		    
		          if (flag == 0) {
		              System.out.println("File Not Found");
		          }
		          break;
		      

			case '4':
				k=false;
				break;
		    	
		        
		      
			default:
				System.out.println("Invalid Operator.");
			}
		}while(k==true);
		      

		     
		
		in.close();
		
	}
}